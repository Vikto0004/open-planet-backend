{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "paths": {
      "@/app/*": ["./src/app/*"],
      "@/middleware/*": ["./src/middlewares/*"],
      "@/controllers/*": ["./src/controllers/*"],
      "@/errors/*": ["./src/helpers/errors/*"],
      "@/services/*": ["./src/services/*"],
      "@/types/*": ["./src/types/*"],
      "@/models/*": ["./src/models/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
